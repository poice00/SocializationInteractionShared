body{
	padding-top:50px;
}

input{
	outline:none;	/* 去掉chrome浏览器对input标签获得焦点时所设置的橙色边框 */
}

input:focus{
	border:2px solid #78B3D1;
}

a:hover{
	color:#337ab7;
}

.carousel{
	height:400px;
	margin-bottom:20px;
	background-color:#000;
}

.carousel .item{
	height:100%;
	background-color:#000;
}

.carouesl img{
	width:100%;
}

.carousel-caption p{
	font-size:20px;
	line-height:1.8;
}

.checkbox{
	margin-left:20px;
	display:inline;
}

.form{
	width:256px;
}

.in_sign{
	color:#BFBFBF;
	font-size:12px;
}

.icon-24{
	display: inline-block;
	width: 24px;
	height: 24px;
	margin-leftt: .3em;
	line-height: 24px;
	vertical-align: middle;
	background-image: url(../img/icon.png);
	background-position: 24px 24px;
	background-repeat: no-repeat;
	overflow: hidden;
}

.icon-24-account-qq{
	background-position:0 -24px;
}

.icon-24-account-qq:hover{
	background-position:0 -96px;
}

.icon-24-account-weixin{
	background-position:0 -48px;
}

.icon-24-account-weixin:hover{
	background-position:0 -120px;
}

.icon-24-account-weibo{
	background-position:0 -72px;
}

.icon-24-account-weibo:hover{
	background-position:0 -144px;
}

